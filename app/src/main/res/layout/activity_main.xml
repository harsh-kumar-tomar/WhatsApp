<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Activities.MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/selectContact"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp"

        android:backgroundTint="#2ca38b"
        android:src="@drawable/message"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
     />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:tabRippleColor="#2ca38b"
        app:tabIndicatorColor="#2ca38b"
        app:tabIndicatorFullWidth="true"
        app:tabSelectedTextColor="#2ca38b"
        app:tabBackground="@drawable/tab_background"
        app:tabTextColor="#86939B" />




        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout"

            />












    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F2C34"
        android:fontFamily="sans-serif-medium"
        android:padding="10dp"
        android:paddingLeft="10dp"
        android:text="WhatsApp"
        android:textAlignment="viewStart"
        android:textColor="#86939B"
        android:textSize="23dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="92dp" />

</androidx.constraintlayout.widget.ConstraintLayout>